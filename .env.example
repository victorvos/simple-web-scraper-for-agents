# OpenAI API Key for the agent integration
OPENAI_API_KEY=your_openai_api_key_here

# Web scraping settings
SCRAPE_DELAY=2.0
USE_STEALTH_MODE=true
MAX_PAGES=3
BROWSER_HEADLESS=true

# Storage settings
CACHE_DIR=./data/cache
CACHE_EXPIRY=86400  # 24 hours in seconds

# Vector embeddings settings
VECTOR_CACHE_DIR=./data/vector_cache
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
USE_VECTORIZATION=true

# Firebase configuration (for vector database)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_COLLECTION_NAME=vector_embeddings
FIREBASE_NAMESPACE=web_scraper
USE_FIREBASE_VECTORDB=true  # Set to false to use FAISS locally instead

# Server settings
HOST=0.0.0.0
PORT=8000
